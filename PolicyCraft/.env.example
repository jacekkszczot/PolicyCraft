# Example environment configuration for PolicyCraft
# Copy to .env and customise for your environment

# Application
HOST=localhost
PORT=5001
FLASK_ENV=development
FEATURE_ADVANCED_ENGINE=1
ANALYSIS_MODE=student_centric
SECRET_KEY=replace_with_a_secure_random_hex

# SQL Database (SQLite by default)
SQLALCHEMY_DATABASE_URI=sqlite:///instance/policycraft.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# MongoDB
MONGODB_URI=mongodb://localhost:27017/policycraft

# Admin User
DEFAULT_ADMIN_EMAIL=admin@policycraft.ai
DEFAULT_ADMIN_PASSWORD=admin1

# Optional email settings
# MAIL_SERVER=smtp.example.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password
# MAIL_DEFAULT_SENDER=noreply@example.com
