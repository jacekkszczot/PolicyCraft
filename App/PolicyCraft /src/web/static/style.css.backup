}

.profile-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e2e8f0;
}

.profile-header h2 {
    color: #1a365d;
    margin-bottom: 0.5rem;
}

.user-role {
    background: var(--orange);
