# Example environment configuration for PolicyCraft
# Copy to .env and customise for your environment

# Application
HOST=localhost
PORT=5001
FLASK_ENV=development
FEATURE_ADVANCED_ENGINE=1
ANALYSIS_MODE=student_centric
SECRET_KEY=replace_with_a_secure_random_hex

# Database
MONGODB_URI=mongodb://localhost:27017/policycraft

