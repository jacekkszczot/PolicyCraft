}/* PolicyCraft Unified Color Palette */
:root {
  /* Primary Colors */
  --primary-blue: var(--blue);
  --primary-orange: var(--orange);
  --primary-green: var(--green);
  --primary-red: var(--red);
  
  /* Secondary Colors */
  --secondary-blue: #3b82f6;
  --secondary-orange: #fbbf24;
  --secondary-green: #10b981;
  --secondary-red: #ef4444;
  
  /* Background Colors */
  --bg-light: #f8fafc;
  --bg-white: #ffffff;
  --bg-dark: #1e293b;
  
  /* Text Colors */
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --text-white: #ffffff;

  /* PolicyCraft Unified Palette */
  --blue: #1e3a8a;
  --orange: #f59e0b;
  --green: #059669;
  --red: #dc2626;

  /* Status Badge Colors */
  --status-restrictive: #dc2626;
  --status-moderate: #f59e0b;
  --status-permissive: #059669;
  --status-unknown: #718096;
  /* Status Colors */
  --status-permissive: var(--primary-green);
  --status-restrictive: var(--primary-red);
}

/* Apply consistent colors */
.btn-primary, .badge.bg-primary { background-color: var(--primary-blue) !important; }
.btn-warning, .badge.bg-warning { background-color: var(--primary-orange) !important; }
.btn-success, .badge.bg-success { background-color: var(--primary-green) !important; }
.btn-danger, .badge.bg-danger { background-color: var(--primary-red) !important; }

.text-orange { color: var(--primary-orange) !important; }
.bg-orange { background-color: var(--primary-orange) !important; }
