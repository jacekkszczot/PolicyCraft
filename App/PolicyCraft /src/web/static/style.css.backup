}

.results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.result-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 5px 20px rgba(26, 54, 93, 0.1);
    border: 1px solid #e2e8f0;
}

.result-stat {
    font-size: 3rem;
    font-weight: bold;
    color: var(--orange);
    margin-bottom: 1rem;
}

.result-card p {
    color: #4a5568;
    line-height: 1.5;
}

.author {
    background: #f8f9fa;
}

.author-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
}

.author-content p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #2d3748;
}

.about-cta {
    background: #1a365d;
    color: white;
    padding: 4rem 2rem;
    text-align: center;
}

.about-cta h2 {
    color: white;
    margin-bottom: 1rem;
}

.about-cta p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
}

.cta-buttons {
