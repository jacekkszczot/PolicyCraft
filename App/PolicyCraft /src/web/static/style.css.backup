    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.error-content {
    text-align: center;
    max-width: 500px;
}

.error-code {
    font-size: 6rem;
    font-weight: bold;
    color: var(--orange);
    margin-bottom: 1rem;
}

.error-title {
    font-size: 2rem;
    color: #1a365d;
    margin-bottom: 1rem;
}

.error-message {
    color: #4a5568;
