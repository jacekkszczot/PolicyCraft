}

.result-card:hover {
    transform: translateY(-2px);
}

.result-card.success {
    border-left: 4px solid var(--green);
}

.result-card.error {
    border-left: 4px solid var(--red);
}

.result-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.result-header h3 {
    color: #1a365d;
    margin: 0;
    font-size: 1.1rem;
}

.status-badge {
    padding: 0.3rem 0.8rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: bold;
    color: white;
}

.status-success { background: var(--green); }
.status-failed { background: var(--red); }

/* === PROFILE SPECIFIC === */
.profile-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
}

.profile-container h1 {
    color: #1a365d;
    margin-bottom: 2rem;
    text-align: center;
}

.profile-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(26, 54, 93, 0.1);
