{% extends "base.html" %}

{% block title %}PolicyCraft - Home{% endblock %}

{% block content %}
<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">PolicyCraft</h1>
        <h2 class="hero-subtitle">AI Policy Analysis for Higher Education</h2>
        <p class="hero-description">
            Strategic and ethical integration of generative AI in universities. 
            Analyse policy documents, extract key themes, and generate tailored recommendations.
        </p>
        
        {% if current_user and current_user.is_authenticated %}
            <!-- Authenticated user view -->
            <div class="hero-actions">
                <a href="{{ url_for('dashboard') }}" class="btn btn-primary btn-large">
                    Go to Dashboard
                </a>
                <a href="{{ url_for('upload_file') }}" class="btn btn-outline btn-large">
                    Upload Policy
                </a>
            </div>
            
            <div class="user-welcome">
                <p>Welcome back, <strong>{{ current_user.get_full_name() }}</strong>!</p>
            </div>
        {% else %}
            <!-- Non-authenticated user view -->
            <div class="hero-actions">
                <a href="{{ url_for('auth.register') }}" class="btn btn-primary btn-large">
                    Get Started Free
                </a>
                <a href="{{ url_for('auth.login') }}" class="btn btn-outline btn-large">
                    Login
                </a>
            </div>
            
            <div class="demo-credentials">
                <p><strong>Try Demo:</strong> Username: <code>admin</code> | Password: <code>admin123</code></p>
            </div>
        {% endif %}
    </div>
</div>

