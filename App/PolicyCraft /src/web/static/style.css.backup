    background-attachment: fixed;
    text-align: center;
}

.cta-section h2 {
    color: #1a365d;
    margin-bottom: 1rem;
}

.cta-section p {
    color: #4a5568;
    margin-bottom: 2rem;
}

/* === FLASH MESSAGES === */
.flash-messages {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 2rem;
}

.alert {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    margin: 1rem 0;
    border-radius: 6px;
    border-left: 4px solid;
}

.alert-success {
    background: #f0fff4;
    border-color: var(--green);
    color: #2f855a;
}

.alert-error {
    background: #fed7d7;
    border-color: var(--red);
    color: #c53030;
}

.alert-info {
    background: #ebf8ff;
    border-color: var(--orange);
    color: #e6a419;
}

.alert-warning {
    background: #fffbf0;
    border-color: var(--orange);
    color: #e6a419;
}

.alert-close {
    background: none;
    border: none;
    font-size: 1.2rem;
    cursor: pointer;
    color: inherit;
    opacity: 0.7;
}

.alert-close:hover {
    opacity: 1;
}

/* === FOOTER === */
.footer {
    background: var(--primary);
    color: var(--secondary);
    padding: 2rem;
    text-align: center;
}

.footer p {
    margin: 0.5rem 0;
}

/* === ANIMATIONS === */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

